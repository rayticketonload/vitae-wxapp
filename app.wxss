/**app.wxss**/
html,
body {
  height: 100%;
  width: 100%;
}

page {
  height: 100%;
}

.container {
  position: relative;
  height: 100%;
  background-color: black;
}

.contentWrap {
  padding-bottom: 150rpx;
}

.functionWrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 150rpx;
  background-color: #e4e4e4;
}

.functionWrap > .addItem {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  top: -75rpx;
  left: 50%;
  margin-left: -75rpx;
  background-color: #a7a7a7;
}

.functionWrap > .addItem:after,
.functionWrap > .addItem:before {
  content: '';
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #fff;
}

.functionWrap > .addItem:before {
  width: 60rpx;
  height: 10rpx;
  margin-top: -5rpx;
  margin-left: -30rpx;
}

.functionWrap > .addItem:after {
  width: 10rpx;
  height: 60rpx;
  margin-top: -30rpx;
  margin-left: -5rpx;
}
