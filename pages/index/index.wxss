/**index.wxss**/
page {
  position: relative;
  height: calc(100vh - 150rpx);
}

.userInfoWrap {
  background-color: rgba(255, 255, 255, 1);
  height: 150rpx;
  line-height: 150rpx;
  padding: 0 30rpx;
  margin: 15rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 0 1px rgba(219, 219, 219, 1) inset;
}

.userInfoAvatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  line-height: 0;
  margin: 0 20rpx 0 0;
}

.userInfoNickname {
  display: inline-block;
  vertical-align: middle;
  font-size: 34rpx;
  line-height: 1.4;
}

.container {
  background-color: transparent;
}

