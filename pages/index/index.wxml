<standardLayout id="standardLayout">
  <div class="indexSearcherWrap">
    <div class="indexSearcherInput" bindtap="toSearchPage">
      <image src="{{ indexSearchIcon }}"></image>
      搜索你{{ currentPackName }}里的物品，收纳点...
    </div>
  </div>
  <div class="indexSearcherWrapBrick"></div>
  <view class="userInfoWrap">
    <view class="userInfo">
      <view class="{{ avatarBoxClass }}">
        <image class="avatar" src="{{ avatarUrl }}"></image>
      </view>
      <text class="currentPackName">{{ currentPackName }}</text>
      <text class="userInfoNickname">{{ nickName }}</text>
    </view>
    <view class="currentPackCtrl">
      <span class="currentPackCtrlBtn">
        <image src="{{ locationEdit }}" bindtap="toLocationEdit"></image>
      </span>
      <span class="currentPackCtrlBtn" bindtap="toMsgBox">
        <image class="msg" src="{{ msg }}"></image>
      </span>
      <span class="currentPackCtrlBtn" bindtap="toLocationList">
        <image class="locationList" src="{{ locationList }}"></image>
      </span>
    </view>
  </view>
  <view class="indexPanel">
    <div class="itemTotal" bindtap="toItemTotal">
      <span class="total">
        {{ currentItemTotal }}
      </span>
    </div>
    <div class="packTotal" bindtap="toPackTotal">
      <span class="total">
        {{ currentPackTotal }}
      </span>
    </div>
  </view>
